{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<esc>",
        "<wait>",
        "linux ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "text ",
        "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/21.cfg",
        "<enter>"
      ],
      "boot_wait": "5s",
      "disk_interface": "virtio-scsi",
      "disk_size": 5000,
      "disk_cache": "unsafe",
      "disk_discard": "unmap",
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "9f1f2f19f75cc3b97da41878b5c86188fa8d27ed446bd97d9df615c137c77cfc",
      "iso_checksum_type": "sha256",
      "iso_url": "http://mirror.yandex.ru/fedora/linux/releases/22/Server/x86_64/iso/Fedora-Server-netinst-x86_64-22.iso",
      "net_device": "virtio-net",
      "output_directory": "output/fedora-22-x86_64-qemu/",
      "machine_type": "pc-i440fx-1.7",
      "qemuargs": [
        [
          "-m",
          "920"
        ]
      ],
      "shutdown_command": "systemctl poweroff",
      "ssh_password": "packer",
      "ssh_username": "root",
      "ssh_wait_timeout": "1200s",
      "type": "qemu",
      "vm_name": "fedora-22-x86_64"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/base.sh",
        "scripts/reboot.sh"
      ],
      "type": "shell"
    },
    {
      "scripts": [
        "scripts/cloudinit.sh",
        "scripts/cleanup.sh"
      ],
      "pause_before": "30s",
      "type": "shell"
    }
  ],
  "post-processors": [
    [
      {
        "type": "compress",
        "format": "bgzf",
        "metadata": true,
        "output": "output/fedora-22-x86_64-compress/"
      },
      {
        "type": "checksum",
        "output": "output/fedora-22-x86_64-compress/"
      }
    ]
  ]
}
