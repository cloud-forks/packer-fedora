{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<esc>",
        "<wait>",
        "linux ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "text ",
        "inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks20.cfg",
        "<enter>"
      ],
      "boot_wait": "10s",
      "disk_interface": "scsi",
      "disk_size": 5000,
      "format": "raw",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "376be7d4855ad6281cb139430606a782fd6189dcb01d7b61448e915802cc350f",
      "iso_checksum_type": "sha256",
      "iso_url": "http://mirror.yandex.ru/fedora/linux/releases/20/Fedora/x86_64/iso/Fedora-20-x86_64-netinst.iso",
      "net_device": "virtio-net",
      "output_directory": "output/fedora-20-x86_64-qemu/",
      "qemuargs": [
        [
          "-device",
          "virtio-scsi-pci,id=scsi0"
        ],
        [
          "-drive",
          "if=none,cache=unsafe,id=drive0,discard=unmap,file=output/fedora-20-x86_64-qemu/fedora-20-x86_64.raw"
        ],
        [
          "-device",
          "scsi-hd,bus=scsi0.0,drive=drive0"
        ],
        [
          "-device",
          "virtio-net,netdev=user.0"
        ],
        [
          "-m",
          "size=920Mib"
        ]
      ],
      "shutdown_command": "systemctl poweroff",
      "ssh_password": "build",
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "fedora-20-x86_64"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/base.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    {
      "type": "strip",
      "output": "output/fedora-20-x86_64-strip/"
    },
    {
      "type": "compress",
      "format": "gzip",
      "output": "output/fedora-20-x86_64-compress/"
    }
  ]
}
